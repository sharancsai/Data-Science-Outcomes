{
  "name": "AWS Learning Agent Development",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "postCreateCommand": "pip install -r requirements.txt && python -c 'from configs.config import setup_directories; setup_directories()'",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.flake8",
        "ms-python.black-formatter",
        "ms-toolsai.jupyter",
        "redhat.vscode-yaml",
        "ms-vscode.docker"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.formatting.provider": "black",
        "python.linting.flake8Enabled": true,
        "python.linting.enabled": true,
        "files.exclude": {
          "**/__pycache__": true,
          "**/*.pyc": true
        }
      }
    }
  },
  "forwardPorts": [8000, 8501],
  "portsAttributes": {
    "8000": {
      "label": "AWS Learning Agent API",
      "visibility": "public"
    },
    "8501": {
      "label": "Streamlit UI",
      "visibility": "public"
    }
  },
  "mounts": [
    "source=${localWorkspaceFolder}/data,target=/workspaces/Data-Science-Outcomes/data,type=bind"
  ],
  "remoteEnv": {
    "PYTHONPATH": "/workspaces/Data-Science-Outcomes"
  }
}