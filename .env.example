# Model Configuration
MODEL_TYPE=ollama  # Options: ollama, huggingface
MODEL_NAME=llama3.2  # For Ollama: llama3.2, mistral, etc. For HF: microsoft/DialoGPT-medium

# Ollama Configuration (for local deployment)
OLLAMA_BASE_URL=http://localhost:11434

# Hugging Face Configuration (for cloud deployment)
HUGGINGFACE_API_KEY=your_hf_api_key_here
HUGGINGFACE_MODEL_NAME=microsoft/DialoGPT-medium

# Database Configuration
DATABASE_URL=sqlite:///./aws_agent.db

# Agent Configuration
AGENT_NAME=AWS Learning Assistant
MAX_MEMORY_SIZE=1000
FEEDBACK_ENABLED=true

# AWS Learning Content
AWS_CONTENT_PATH=./data/aws_content
KNOWLEDGE_BASE_PATH=./data/knowledge_base

# Deployment Configuration
ENVIRONMENT=development  # Options: development, production
PORT=8000
HOST=0.0.0.0

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/agent.log